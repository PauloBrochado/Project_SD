#!/bin/bash

CONFIG_FILE="../etc/configure.json"
SERVERS_DIR="../src/DNs"
PROJECT_ROOT="../"

function usage {
  cat <<EOT
Usage: beeDBd [start|stop|restart|status|stats]
EOT
  exit $1
}

function start_servers {
  echo "Starting RP..."
  node  $PROJECT_ROOT/src/RP/rp_4000.js &

  echo "Starting DN Servers..."
  for port in $(jq -r '.nodes[].servers[].port' $CONFIG_FILE); do
    node $SERVERS_DIR/server_$port.js &
  done

  echo "beeDB started."
  echo "BeeDB is running locally!"
  echo "RP is available at: http://localhost:4000"
  echo "To access servers, use: http://localhost:4000/api?id=dn0_<port>"
  echo "To see statistics, use: http://localhost:4000/stat"
}

function stop_servers {
  echo "Stopping all beeDB services..."
  pkill -f $PROJECT_ROOT/src/RP/rp_4000.js
  lsof -i :4000 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3000.js
  lsof -i :3000 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3010.js
  lsof -i :3010 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3020.js
  lsof -i :3020 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3100.js
  lsof -i :3100 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3110.js
  lsof -i :3110 | grep LISTEN | awk '{print $2}' | xargs kill -9

  pkill -f $PROJECT_ROOT/src/DNs/server_3120.js
  lsof -i :3120 | grep LISTEN | awk '{print $2}' | xargs kill -9
  echo "Stopped."
}

function show_status {
  echo "Status:"
  pgrep -af $PROJECT_ROOT/src/RP/rp_4000.js
}

function show_stats {
  echo "Stats (mock):"
  echo "Total inserts: 0"
  echo "Total reads: 0"
}

case $1 in
  start) start_servers;;
  stop) stop_servers;;
  restart) stop_servers && sleep 1 && start_servers;;
  status) show_status;;
  stats) show_stats;;
  -h) usage 0;;
  *) usage 1;;
esac
