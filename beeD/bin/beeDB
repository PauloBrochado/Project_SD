#!/bin/bash

function usage
{
  cat <<EOT
  Usage:
    beeDB  start
    will start the beeDB distributed DB service.

  or
    beeDB  stop
    will stop the beeDB distributed DB service.

  or
    beeDB  restart
    will restart the beeDB distributed DB service.

  or
    beeDB  status
    will show the status of  the beeDB distributed DB service.

  or
    beeDB  stat
    will show the stat of  the beeDB distributed DB service.
EOT
  exit $1
}

case $1 in
start) echo ... doing start.;;
stop) echo ... doing stop.;;
restart) echo ... doing restart.;;
status) echo ... showing status.;;
stat) echo ... showing  stat.;;
-h) usage 0;;
*) usage 1
esac
